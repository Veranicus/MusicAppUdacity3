<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_activity_heading_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#c5cae9</item>
    </style>

    <style name="main_activity_borders_style">
        <item name="android:textColor">#1565C0</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#9499b7</item>
    </style>

    <style name="main_activity_rubrics_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#e8eaf6</item>
    </style>

    <style name="navbar_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#c5cae9</item>
    </style>

    <style name="navbar_description_text_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">#c5cae9</item>
    </style>
    <style name="navbar_active__style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">9sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">#e8eaf6</item>
    </style>

</resources>
